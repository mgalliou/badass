### Unitcast

## router_1

# create and bring up bridge interface
ip link add br0 type bridge
ip link set dev br0 up

# set eth1 ip address
ip addr add 10.1.1.1/24 dev eth1

# create vxlan interface
ip link add name vxlan10 type vxlan id 10 dev eth0 remote 10.1.1.2 local 10.1.1.1 dstport 4789

# set vxlan ip address
ip addr add 20.1.1.1/24 dev vxlan10

# connect bridge to both eth0 and vxlan10 interfaces
brctl addif br0 eth0
brctl addif br0 vxlan10

# bring up vlxan interface
ip link set dev vxlan10 up

## router_2

# same as router_1 except for the eth1 ip address, the remote/local address
# in the vxlan interface creation command and the vxlan10 address
ip addr add 10.1.1.2/24 dev eth1
ip link add name vxlan10 type vxlan id 10 dev eth0 remote 10.1.1.1 local 10.1.1.2 dstport 4789
ip addr add 20.1.1.2/24 dev vxlan10

## host_1
ip addr add 30.1.1.1/24 dev eth0

## host_2
ip addr add 30.1.1.2/24 dev eth0

### Multicast

# same as unitcast, except for the vxlan interface creation commands (now the
# same for both router_1 and 2

ip link add name vxlan10 type vxlan id 10 dev eth0 group 239.1.1.1 dstport 4789
